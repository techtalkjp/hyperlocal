{
  "name": "hyperlocal",
  "scripts": {
    "build": "turbo build",
    "deploy": "fly deploy -c flyio/web/fly.toml --dockerfile flyio/web/Dockerfile",
    "dev": "turbo dev",
    "format": "turbo format",
    "format:fix": "turbo format:fix",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "validate": "turbo validate",
    "db:migrate": "pnpm --filter @hyperlocal/db prisma migrate dev",
    "db:migrate:production": "pnpm --filter @hyperlocal/db migrate:production",
    "db:fix:checksums": "pnpm --filter @hyperlocal/db fix:checksums",
    "db:replica": "pnpm --filter @hyperlocal/web make:replica",
    "db:reset": "pnpm --filter @hyperlocal/web db:reset",
    "db:upload": "pnpm --filter @hyperlocal/web upload:db"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "turbo": "catalog:"
  },
  "packageManager": "pnpm@10.17.0"
}
