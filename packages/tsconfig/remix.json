{
  "extends": "./base.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/.server/**/*.ts",
    "**/.server/**/*.tsx",
    "**/.client/**/*.ts",
    "**/.client/**/*.tsx"
  ],
  "compilerOptions": {
    "types": ["@types/node", "@remix-run/node", "vite/client"],
    "paths": {
      "~/*": ["./app/*"]
    },
    "noEmit": true
  }
}
